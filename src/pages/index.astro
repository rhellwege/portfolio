---
import VerticalNav from "../components/VerticalNav.astro";
import Section from "../components/Section.astro";
import MainLayout from "../layouts/MainLayout.astro";

const sections = [
    { title: "Home", description: "" },
    { title: "About me", description: "Student at fullerton" }
];
---

<MainLayout title="Portfolio">
    <main class="scroll-smooth">
        <VerticalNav {sections} />
        <div class="bg-[--primary-bg-color] from-[--secondary-bg-color] bg-gradient-to-tr md:ml-[--navbar-width] fixed h-full w-full text-[--primary-color]">
            {sections.map(section => (<Section {section} />))}
            <h1>Hello</h1>
        </div>
    </main>
</MainLayout>
