---
import VerticalNav from "../components/VerticalNav.astro";
import Section from "../components/Section.astro";
import MainLayout from "../layouts/MainLayout.astro";

const section_titles = [
    {title: "About Me", img: "user-circle.svg"},
    {title: "Experience", img: "briefcase.svg"}, 
    {title: "Skills", img: "target.svg"}
];
---

<MainLayout title="Portfolio">
    <main class="scroll-smooth">
        <VerticalNav sections={section_titles} />
        <ul class="overflow-auto bg-[--white] md:ml-[--navbar-width] fixed w-full h-full text-[--black]">
            <Section title="About Me">
                <h2 class="mb-2 text-[--primary-normal] text-2xl">Ryan Hellwege</h2>
                <ul class="mb-2">
                    <li>I am a third year computer science student at CSUF.</li>
                    <li>I transferred from Saddleback Community College.</li>
                </ul>
                <div class="flex flex-row space-x-3 mt-3">
                    <a class="" href="https://github.com/rhellwege?tab=repositories">
                        <img class="object-scale-down w-10" src="github-mark.svg" alt="">
                    </a>
                    <div class="flex flex-row">
                        <img class="object-scale-down w-10" src="mail.svg" alt="">
                        <em>rhellwege6@gmail.com</em>
                    </div>
                </div>
            </Section>
            <Section title="Experience">
                <h2 class="mb-2 text-[--primary-normal] text-2xl">Work Experience</h2>
                <img class="object-scale-down w-48 mt-4 mb-2" src="albertsons.svg" alt="">
                <p>Albertsons Deli Clerk 2021-2022</p>
                <h2 class="mt-4 mb-2 text-[--primary-normal] text-2xl">Programming Projects</h2>
                <ul class="ml-4">
                    <li><a class="underline" href="https://github.com/rhellwege/Mazer">Mazer - CLI Maze generator</a></li>
                    <li><a class="underline" href="https://github.com/rhellwege/Synnim">Synnim - Digital Synthesizer</a></li>
                    <li><a class="underline" href="https://github.com/rhellwege/netris">Netris - Tetris Clone writtern in Nim</a></li>
                </ul>
            </Section>
            <Section title="Skills">
                <h2 class="mb-2 text-[--primary-normal] text-2xl">Programming Languages</h2>
                <ul class="list-disc ml-10">
                    <li>Javascript / Typescript</li>
                    <li>HTML / CSS</li>
                    <li>C / C++</li>
                    <li>Python</li>
                    <li>Nim</li>
                </ul>
                <h2 class="my-2 text-[--primary-normal] text-2xl">Soft Skills</h2>
                <ul class="list-disc ml-10">
                    <li>Fast problem solving.</li>
                    <li>Willing to lead, and communication skills.</li>
                    <li>Good work ethic.</li>
                </ul>
            </Section>
        </ul>
    </main>
</MainLayout>

<style>
@media (min-width: 768px) {
    ul {
        width: calc(100% - var(--navbar-width));
    }
}
</style>
