---
interface Props {
    title: string;
    href: string;
    image: string;
};

const { title, href, image } = Astro.props;
---

<div class="shadow-2xl flex flex-row md:flex-col">
    <a href={href} >
        <div class="">
            <h1 class="text-center text-2xl font-bold text-[--secondary-focus]">{title}</h1>
            <hr class="h-[2px] my-3 bg-[--black] border-0 ">
            <img class="mx-auto" src={image} width=200 alt="">
        </div>
    </a>
    <hr class="h-[2px] my-3 bg-[--black] border-0 ">
    <div class="p-4 text-sm ">
        <slot />
    </div>
</div>
