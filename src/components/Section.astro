---
interface Props {
    title: string;
};

const { title } = Astro.props;
---

<div class="p-6 md:m-[50px] m-[30px] border-[--border-color] border-2">
    <h1 transition:name=`title-${title.toLowerCase()}` class="text-3xl font-bold">{title}</h1>
    <hr class="h-px my-4 bg-[--black] border-0 ">
    <div transition:animate="slide" class="text-lg text-[--primary-color] p-5">
        <slot />
    </div>
</div>
